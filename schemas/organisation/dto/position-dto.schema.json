{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/yoku-app/Schema/main/schemas/organisation/dto/position-dto.schema.json",
    "title": "OrgPositionDTO",
    "type": "object",
    "required": [
        "id",
        "organisationId",
        "name",
        "rank",
        "permissions",
        "isDefault"
    ],
    "properties": {
        "id": { "type": "string", "format": "uuid" },
        "organisationId": { "type": "string", "format": "uuid" },
        "name": { "type": "string" },
        "rank": { "type": "number" },
        "permissions": {
            "type": "array",
            "items": {
                "$ref": "https://raw.githubusercontent.com/yoku-app/Schema/main/schemas/organisation/dto/permission-dto.schema.json"
            }
        },
        "isDefault": { "type": "boolean" }
    },
    "additionalProperties": false
}
