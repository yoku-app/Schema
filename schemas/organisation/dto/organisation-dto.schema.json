{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "OrganisationDTO",
    "type": "object",
    "required": [
        "id",
        "name",
        "description",
        "email",
        "memberCount",
        "surveyCreationCount",
        "publicStatus",
        "averageSurveyReviewRating",
        "industry",
        "creator"
    ],
    "properties": {
        "id": { "type": "string", "format": "uuid" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "memberCount": { "type": "integer", "minimum": 0 },
        "avatarURL": {
            "oneOf": [{ "type": "string", "format": "uri" }, { "type": "null" }]
        },
        "surveyCreationCount": { "type": "integer", "minimum": 0 },
        "publicStatus": { "type": "boolean" },
        "averageSurveyReviewRating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5
        },
        "industry": {
            "oneOf": [
                { "type": "null" },
                {
                    "$ref": "https://raw.githubusercontent.com/yoku-app/Schema/refs/heads/main/schemas/lookups/industry.schema.json"
                }
            ]
        },
        "creator": {
            "oneOf": [
                { "type": "null" },
                {
                    "$ref": "https://raw.githubusercontent.com/yoku-app/Schema/refs/heads/main/schemas/user/profile.schema.json"
                }
            ]
        }
    },
    "additionalProperties": false
}
