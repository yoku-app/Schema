{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/yoku-app/Schema/main/schemas/organisation/organisation.schema.json",
    "title": "Organisation",
    "type": "object",
    "required": [
        "id",
        "industryId",
        "creatorId",
        "name",
        "email",
        "memberCount",
        "publicStatus",
        "createdAt",
        "updatedAt",
        "surveyCreationCount",
        "averageSurveyReviewRating"
    ],
    "properties": {
        "id": { "type": "string", "format": "uuid" },
        "name": { "type": "string" },
        "description": { "type": "string" }
    },
    "industryId": { "type": "string", "format": "uuid" },
    "creatorId": { "type": "string", "format": "uuid" },
    "email": { "type": "string", "format": "email" },
    "memberCount": { "type": "integer", "minimum": 0 },
    "avatarURL": {
        "type": "string",
        "format": "uri"
    },
    "publicStatus": { "type": "boolean" },
    "createdAt": {
        "type": "string",
        "format": "date-time",
        "tsType": "Date"
    },
    "updatedAt": {
        "type": "string",
        "format": "date-time",
        "tsType": "Date"
    },
    "surveyCreationCount": { "type": "integer", "minimum": 0 },
    "averageSurveyReviewRating": {
        "type": "number",
        "minimum": 0,
        "maximum": 5
    },
    "additionalProperties": false
}
