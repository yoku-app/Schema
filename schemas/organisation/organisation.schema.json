{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Organisation",
    "type": "object",
    "required": [
        "id",
        "industryId",
        "creatorId",
        "name",
        "description",
        "email",
        "memberCount",
        "publicStatus",
        "createdAt",
        "updatedAt",
        "surveyCreationCount",
        "averageSurveyReviewRating"
    ],
    "properties": {
        "id": { "type": "string", "format": "uuid" },
        "industryId": { "type": "string", "format": "uuid" },
        "creatorId": { "type": "string", "format": "uuid" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "memberCount": { "type": "integer", "minimum": 0 },
        "avatarURL": {
            "oneOf": [{ "type": "string", "format": "uri" }, { "type": "null" }]
        },
        "publicStatus": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time", "tsType": "Date" },
        "updatedAt": { "type": "string", "format": "date-time", "tsType": "Date" },
        "surveyCreationCount": { "type": "integer", "minimum": 0 },
        "averageSurveyReviewRating": { "type": "number", "minimum": 0, "maximum": 5 }
    },
    "additionalProperties": false
}