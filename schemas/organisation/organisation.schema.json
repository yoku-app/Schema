{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/yoku-app/Schema/refs/heads/main/schemas/organisation/organisation.schema.json",
    "title": "Organisation",
    "type": "object",
    "required": [
        "id",
        "industryId",
        "creatorId",
        "name",
        "email",
        "memberCount",
        "publicStatus",
        "createdAt",
        "updatedAt",
        "surveyCreationCount",
        "averageSurveyReviewRating",
        "industry",
        "creator"
    ],
    "properties": {
        "id": { "type": "string", "format": "uuid" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "memberCount": { "type": "integer", "minimum": 0 },
        "avatarURL": {
            "oneOf": [{ "type": "string", "format": "uri" }, { "type": "null" }]
        },
        "publicStatus": { "type": "boolean" },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "tsType": "Date"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time",
            "tsType": "Date"
        },
        "surveyCreationCount": { "type": "integer", "minimum": 0 },
        "averageSurveyReviewRating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5
        },
        "industry": {
            "$ref": "https://raw.githubusercontent.com/yoku-app/Schema/refs/heads/main/schemas/lookups/industry.schema.json"
        },
        "creator": {
            "$ref": "https://raw.githubusercontent.com/yoku-app/Schema/refs/heads/main/schemas/user/profile.schema.json"
        }
    },
    "additionalProperties": false
}
