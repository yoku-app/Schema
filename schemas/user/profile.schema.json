{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/yoku-app/Schema/refs/heads/main/schemas/user/profile.schema.json",
    "title": "UserProfile",
    "type": "object",
    "required": [
        "userId",
        "email",
        "displayName",
        "createdAt",
        "focus",
        "avatarUrl"
    ],
    "properties": {
        "userId": { "type": "string", "format": "uuid" },
        "phone": { "type": "string", "nullable": true },
        "focus": {
            "oneOf": [
                {
                    "type": "string",
                    "enum": ["RESPONDENT", "CREATOR", "HYBRID"]
                },
                { "type": "null" }
            ]
        },
        "dob": {
            "type": "string",
            "format": "date",
            "tsType": "Date",
            "nullable": true
        },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "avatarUrl": {
            "oneOf": [{ "type": "string", "format": "uri" }, { "type": "null" }]
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "tsType": "Date"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time",
            "tsType": "Date",
            "nullable": true
        },
        "onboardingCompletion": {
            "type": "object",
            "nullable": true,
            "properties": {
                "respondent": {
                    "type": "string",
                    "format": "date-time",
                    "tsType": "Date",
                    "nullable": true
                },
                "creator": {
                    "type": "string",
                    "format": "date-time",
                    "tsType": "Date",
                    "nullable": true
                },
                "core": {
                    "type": "string",
                    "format": "date-time",
                    "tsType": "Date",
                    "nullable": true
                }
            }
        }
    },
    "additionalProperties": false
}
