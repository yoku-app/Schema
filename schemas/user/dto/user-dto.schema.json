{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/yoku-app/Schema/main/schemas/user/dto/user-dto.schema.json",
    "title": "UserDTO",
    "type": "object",
    "required": ["id", "name", "email", "createdAt"],
    "properties": {
        "id": { "type": "string", "format": "uuid" },
        "name": { "type": "string" },
        "phone": { "type": "string", "nullable": true },
        "dob": {
            "type": "string",
            "format": "date",
            "tsType": "Date",
            "nullable": true
        },
        "email": { "type": "string", "format": "email" },
        "avatarUrl": { "type": "string", "format": "uri", "nullable": true },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "tsType": "Date"
        },
        "focus": {
            "nullable": true,
            "oneOf": [
                {
                    "type": "string",
                    "enum": ["RESPONDENT", "CREATOR", "HYBRID"]
                }
            ]
        },
        "onboardingCompletion": {
            "type": "object",
            "nullable": true,
            "properties": {
                "respondent": {
                    "type": "string",
                    "format": "date-time",
                    "tsType": "Date",
                    "nullable": true
                },
                "creator": {
                    "type": "string",
                    "format": "date-time",
                    "tsType": "Date",
                    "nullable": true
                },
                "core": {
                    "type": "string",
                    "format": "date-time",
                    "tsType": "Date",
                    "nullable": true
                }
            }
        }
    },
    "additionalProperties": false
}
