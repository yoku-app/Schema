{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/yoku-app/Schema/refs/heads/main/schemas/user/dto/user-partial-dto.schema.json",
    "title": "UserProfilePartialDTO",
    "type": "object",
    "required": [
        "userId",
        "email",
        "displayName",
        "avatarUrl"
    ],
    "properties": {
        "userId": { "type": "string", "format": "uuid" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "avatarUrl": {
            "oneOf": [{ "type": "string", "format": "uri" }, { "type": "null" }]
        }
    },
    "additionalProperties": false
}
