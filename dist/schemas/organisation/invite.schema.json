{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "OrganisationInvite",
    "type": "object",
    "required": [
        "id",
        "organisationId",
        "email",
        "token",
        "inviteStatus",
        "expiresAt",
        "createdAt"
    ],
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "organisationId": {
            "type": "string",
            "format": "uuid"
        },
        "userId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "token": {
            "type": "string",
            "minLength": 12,
            "maxLength": 12
        },
        "inviteStatus": {
            "type": "string",
            "enum": [
                "PENDING",
                "ACCEPTED",
                "REJECTED",
                "EXPIRED"
            ]
        },
        "expiresAt": {
            "type": "string",
            "format": "date-time"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        }
    },
    "additionalProperties": false
}