{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "OrganisationDTO",
    "type": "object",
    "required": [
        "id",
        "name",
        "description",
        "email",
        "memberCount",
        "surveyCreationCount"
    ],
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "memberCount": {
            "type": "integer",
            "minimum": 0
        },
        "avatarURL": {
            "oneOf": [
                {
                    "type": "string",
                    "format": "uri"
                },
                {
                    "type": "null"
                }
            ]
        },
        "surveyCreationCount": {
            "type": "integer",
            "minimum": 0
        }
    },
    "additionalProperties": false
}