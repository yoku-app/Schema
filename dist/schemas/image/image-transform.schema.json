{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "ImageDimensions": {
            "$ref": "#/definitions/ImageDimensions"
        },
        "ImageCrop": {
            "$ref": "#/definitions/ImageCrop"
        },
        "ImageType": {
            "$ref": "#/definitions/ImageType"
        },
        "ImageTransformRequest": {
            "$ref": "#/definitions/ImageTransformRequest"
        }
    },
    "definitions": {
        "ImageDimensions": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties": {
                "width": {
                    "type": "integer"
                },
                "height": {
                    "type": "integer"
                }
            },
            "additionalProperties": false
        },
        "ImageCrop": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties": {
                "width": {
                    "type": "integer"
                },
                "height": {
                    "type": "integer"
                },
                "left": {
                    "type": "integer"
                },
                "top": {
                    "type": "integer"
                }
            },
            "required": ["width", "height", "left", "top"],
            "additionalProperties": false
        },
        "ImageType": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "string",
            "enum": ["jpeg", "png", "gif", "jpg", "webp"]
        },
        "ImageTransformRequest": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties": {
                "resize": {
                    "$ref": "#/definitions/ImageDimensions"
                },
                "crop": {
                    "$ref": "#/definitions/ImageCrop"
                },
                "format": {
                    "$ref": "#/definitions/ImageType"
                }
            },
            "additionalProperties": false
        }
    }
}
